{
  "name": "@garethfuller/glue",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "description": "Glue is a minimal Vue component library that uses Tailwindcss classes for customisation.",
  "keywords": [
    "vue",
    "vuejs",
    "tailwindcss",
    "component library",
    "ui library"
  ],
  "homepage": "https://github.com/garethfuller/glue#glue-vue",
  "bugs": {
    "url": "https://github.com/garethfuller/glue/issues",
    "email": "gareth@remotely.digital"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/garethfuller/glue.git"
  },
  "license": "MIT",
  "files": [
    "dist/*",
    "src/plugin/*"
  ],
  "scripts": {
    "serve": "vue-cli-service serve ./src/app.js",
    "build": "vue-cli-service build --target lib --name glue ./src/plugin/index.js",
    "publish": "npm publish --access public",
    "release": "release-it",
    "prepublish": "babel src/plugin --out-dir dist --copy-files"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "tokenRef": "GITHUB_TOKEN"
    },
    "npm": {
      "access": "public",
      "skipChecks": true
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@garethfuller/glue": "./",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.4.0",
    "release-it": "^13.5.7",
    "tailwindcss": "^1.1.3",
    "vue-highlightjs": "^1.3.3",
    "vue-markdown-loader": "^2.4.1",
    "vue-router": "^3.1.6",
    "vue-template-compiler": "^2.6.11"
  }
}
